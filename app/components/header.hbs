<div class="header">
    <div class="headerText d-flex justify-content-center">
        <h1>{{@text}}</h1>
    </div>
    <div class="headerForm d-flex justify-content-center">
        <div class="form-inline">
            <Input class="form-control mr-sm-2" type="search" placeholder="Session id..." aria-label="Search"
                @value={{this.session_id}} />
            <button {{on "click" (fn @onClick this.session_id)}}
                class="btn btn-outline-light my-2 my-sm-0">Search</button>
        </div>
    </div>
</div>
{{yield}}